{
  "name": "www.leonyu.net",
  "version": "0.0.2",
  "author": "Leon Yu <leon@leonyu.net>",
  "description": "www.leonyu.net",
  "private": true,
  "dependencies": {
    "qrcode": "^1.5.0"
  },
  "devDependencies": {
    "@types/qrcode": "^1.4.2",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "cspell": "^5.16.0",
    "eslint": "^8.7.0",
    "html-minifier": "^4.0.0",
    "rimraf": "^3.0.0",
    "stylelint": "^14.2.0",
    "stylelint-config-standard": "^24.0.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.9.1"
  },
  "scripts": {
    "clean": "rimraf dist yarn-error.log",
    "lint": " eslint . --ext .ts && stylelint public/css && cspell 'src/**/*.ts' 'public/**/*'",
    "build": "html-minifier --input-dir public/ -c html-minifier.conf --output-dir dist/ && webpack",
    "do-upgrade": "yarn install && yarn upgrade --latest && rimraf node_modules yarn.lock && yarn install && yarn lint && yarn build"
  }
