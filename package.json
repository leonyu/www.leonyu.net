{
  "name": "www.leonyu.net",
  "version": "0.0.2",
  "author": "Leon Yu <leon@leonyu.net>",
  "description": "www.leonyu.net",
  "private": true,
  "dependencies": {
    "qrcode": "^1.5.0"
  },
  "devDependencies": {
    "@types/qrcode": "^1.4.2",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.45.0",
    "cspell": "^6.18.0",
    "eslint": "^8.7.0",
    "html-minifier": "^4.0.0",
    "rimraf": "^4.1.2",
    "stylelint": "^14.2.0",
    "stylelint-config-standard": "^29.0.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "scripts": {
    "clean": "rimraf dist",
    "lint": " eslint . --ext .ts && stylelint public/css && cspell 'src/**/*.ts' 'public/**/*'",
    "build": "html-minifier --input-dir public/ -c html-minifier.conf --output-dir dist/ && webpack",
    "do-upgrade": "npm install && npm upgrade --latest && rimraf node_modules package-lock.json && npm install && npm run lint && npm run build"
  }
}
